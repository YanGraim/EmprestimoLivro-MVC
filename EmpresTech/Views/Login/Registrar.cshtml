@model EmpresTech.Dto.UsuarioRegisterDto

@{
    ViewData["title"] = "Registrar";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container mt-5">
    <h2>Cadastro de Usu√°rios</h2>
    <form asp-action="Registrar" asp-controller="Login" method="post">
        <div class="mb-4">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="nome" placeholder="Digite seu nome">
        </div>
        <div class="mb-4">
            <label for="sobrenome" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" asp-for="Sobrenome" id="sobrenome" placeholder="Digite seu sobrenome">
        </div>
        <div class="mb-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Digite seu email">
        </div>
        <div class="mb-4">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" class="form-control" asp-for="Senha" id="senha" placeholder="Digite sua senha">
        </div>
        <div class="mb-4">
            <label for="confirmaSenha" class="form-label">Confirmar senha</label>
            <input type="password" class="form-control" asp-for="ConfirmaSenha" id="confirmaSenha" placeholder="Confirme sua senha">
        </div>
        <div class="d-flex justify-content-center align-items-center gap-4">
            <button type="submit" class="btn btn-primary w-25">Cadastrar</button>
            <a asp-action="Index" asp-controller="Login" class="btn w-25">Voltar</a>
        </div>
    </form>
</div>